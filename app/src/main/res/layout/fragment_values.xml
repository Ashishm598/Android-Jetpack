    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ui.fragment.values.ValuesFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_values"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
